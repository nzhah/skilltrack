# Environment: development, production
NODE_ENV=development

# Server Port
PORT=5000

# MongoDB Connection String
# Get this from MongoDB Atlas: Cluster > Connect > Connect with application
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/skilltrack?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure random string for production (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT expiration time
JWT_EXPIRE=30d

# Frontend URL for CORS
# Development: http://localhost:3000
# Production: https://your-vercel-app.vercel.app
CLIENT_URL=http://localhost:3000